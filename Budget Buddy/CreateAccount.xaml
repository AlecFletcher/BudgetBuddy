<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Budget_Buddy.CreateAccount">
    <VerticalStackLayout>
        <Label
            Text="Create new account"
            Margin="30,30,30,0"
            FontSize="40"
            FontAttributes="Bold"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>
        <Grid
            ColumnDefinitions="4*,5*"
            RowDefinitions="70,70,140"
            Margin="20"
            VerticalOptions="Center">

            <Label
                Text="Username:"
                FontSize="Title"
                Grid.Column="0"
                Grid.Row="1"
                VerticalOptions="Center"/>
            <Entry
                Grid.Column="1"
                Grid.Row="1"
                VerticalOptions="Center"/>
            <Label
                Text="Password:"
                FontSize="Title"
                Grid.Column="0"
                Grid.Row="2"
                VerticalOptions="Center"/>
            <Entry
                Grid.Column="1"
                Grid.Row="2"
                VerticalOptions="Center"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
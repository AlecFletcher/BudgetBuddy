<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Budget_Buddy.CreateAccount">
    <VerticalStackLayout>
        <Label
            Text="Create new account"
            Margin="30,30,30,0"
            FontSize="40"
            FontAttributes="Bold"
            VerticalOptions="Center"
            HorizontalTextAlignment="Center"/>
        <Grid
            ColumnDefinitions="4*,5*"
            RowDefinitions="90,90,90"
            Margin="20"
            VerticalOptions="Center">
            <Label
                Text="First Name:"
                FontSize="Title"
                Grid.Column="0"
                Grid.Row="0"
                VerticalOptions="Center"/>
            <Entry
                x:Name="first_name_label"
                Grid.Column="1"
                Grid.Row="0"
                VerticalOptions="Center"
                FontSize="20"/>
            <Label
                Text="Username:"
                FontSize="Title"
                Grid.Column="0"
                Grid.Row="1"
                VerticalOptions="Center"/>
            <Entry
                x:Name="username_label"
                Grid.Column="1"
                Grid.Row="1"
                VerticalOptions="Center"
                FontSize="20"/>
            <Label
                Text="Password:"
                FontSize="Title"
                Grid.Column="0"
                Grid.Row="2"
                VerticalOptions="Center"/>
            <Entry
                x:Name="password_label"
                Grid.Column="1"
                Grid.Row="2"
                VerticalOptions="Center"
                IsPassword="True"
                FontSize="20"/>
        </Grid>
        <Button Text="Add Account"
                FontSize="Title"
                FontAttributes="Bold"
                Margin="30,30,30,0"
                MinimumHeightRequest="120"
                Clicked="Add_Account_Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
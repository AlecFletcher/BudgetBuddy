<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Budget_Buddy.FutureReports"
             Loaded="ContentPage_Loaded">
    <VerticalStackLayout>
        <Label Text="Check out how much you'll save / pay off with your current savings / debt percentages!" FontSize="30" Margin="20,0" HorizontalTextAlignment="Center"/>
        <Grid RowDefinitions="60,50,40,40,80,40,40" ColumnDefinitions="2*,3*" Margin="20,50,20,0">
            <Label Text="After:" Margin="0,0,10,0" FontSize="30" HorizontalOptions="End" VerticalOptions="Center" Grid.Row="0" Grid.Column="0"/>
            <Picker Grid.Row="0" Grid.Column="1" FontSize="30" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalOptions="Center" SelectedIndexChanged="Picker_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>3 Months</x:String>
                    <x:String>6 Months</x:String>
                    <x:String>1 Year</x:String>
                    <x:String>2 Years</x:String>
                    <x:String>3 Years</x:String>
                    <x:String>4 Years</x:String>
                    <x:String>5 Years</x:String>
                </Picker.Items>
            </Picker>

            <Label x:Name="timestamp_label" FontSize="12" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"  VerticalTextAlignment="Center" HorizontalTextAlignment="End"/>
            <Label Text="Savings:" FontSize="30" x:Name="s_label" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
            <Label x:Name="savings_label" FontAttributes="Bold" FontSize="30" HorizontalOptions="Center" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" VerticalTextAlignment="Center" HorizontalTextAlignment="Start"/>
            <Label Text="Debt Repayment:" FontSize="30" x:Name="d_label" HorizontalOptions="Center" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" LineBreakMode="WordWrap" VerticalTextAlignment="Center"/>
            <Label x:Name="debt_label" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" VerticalTextAlignment="Center" HorizontalTextAlignment="Start"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
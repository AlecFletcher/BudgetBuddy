<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Budget_Buddy.FirstTimeBills"
             xmlns:models="clr-namespace:Budget_Buddy.Models"
             Loaded="ContentPage_Loaded">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Final step! Add your bills!" FontSize="35" HorizontalOptions="Center"/>
            <Grid
                ColumnDefinitions="2*,1*,50,50,50"
                Margin="10">
                <Label Text="Name"
                       FontAttributes="Bold"
                       FontSize="20"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Grid.Column="0"/>

                <Label Text="Price"
                       FontAttributes="Bold"
                       FontSize="20"
                       Margin="5,0,0,0"
                       VerticalOptions="Center"
                       Grid.Column="1"/>

                <Label Text="Day Due"
                       FontAttributes="Bold"
                       Grid.Column="2"
                       FontSize="20"
                       VerticalOptions="Center"/>
                <Label Text="Due every pay period" FontAttributes="Bold" HorizontalOptions="Center" FontSize="20" Grid.Column="3" Grid.ColumnSpan="2" Margin="10,0,0,0"></Label>

            </Grid>

            <CollectionView
                x:Name="DebtListCollectionView"
                x:DataType="models:Debt">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="10,0">
                            <Grid
                                ColumnDefinitions="5*,1*,1*,1*,50"
                                RowDefinitions="100">
                                <Label Text="{Binding Name}"
                                    Margin="5,0"
                                    Grid.Column="0"
                                    FontSize="20"
                                    HorizontalTextAlignment="Center"
                                    VerticalOptions="Center"/>

                                <Label Text="{Binding Price}"
                                    FontAttributes="Bold"
                                    Grid.Column="1"
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"/>

                                <Label Text="{Binding DueDay}"
                                    FontAttributes="Bold"
                                    Grid.Column="2"
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    VerticalOptions="Center"/>
                                <CheckBox Grid.Column="3"></CheckBox>
                                <ImageButton 
                                    Grid.Column="4"
                                    Clicked="Debt_Delete_Button_Clicked"
                                    Margin="0,0,10,0"
                                    Source="trashcan.png"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"></ImageButton>
                            </Grid>
                        </Border>


                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <CollectionView
                x:Name="BillListCollectionView"
                x:DataType="models:Bill">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="10,0">
                            <Grid
                                ColumnDefinitions="2*,1*,50,50,50"
                                RowDefinitions="100">
                                <Entry Text="{Binding Name, Mode=TwoWay}"
                                    Placeholder="Name"
                                    Grid.Column="0"
                                    FontSize="20"
                                    VerticalOptions="Center"/>

                                <Entry Text="{Binding Price, Mode=TwoWay}"
                                    Placeholder="Price"
                                    Keyboard="Numeric"
                                    Grid.Column="1"
                                    FontSize="20"
                                    HorizontalTextAlignment="Center"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"/>

                                <Entry Text="{Binding DueDay, Mode=TwoWay}"
                                    Placeholder="Day"
                                    Keyboard="Numeric"
                                    MaxLength="2"
                                    Grid.Column="2"
                                    FontSize="20"
                                    HorizontalOptions="Start"
                                    HorizontalTextAlignment="Center"
                                    VerticalOptions="Center"/>
                                <CheckBox Grid.Column="3" IsChecked="{Binding Recurring, Mode=TwoWay, FallbackValue=False}"></CheckBox>
                                <ImageButton 
                                    Grid.Column="4"
                                    Clicked="ImageButton_Clicked"
                                    Margin="5,0,5,0"
                                    Source="trashcan.png"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"></ImageButton>
                            </Grid>
                        </Border>


                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Grid
                Margin="20"
                ColumnDefinitions="7*,1*"
                RowDefinitions="50">
                <ImageButton Source="plus_symbol.png" 
                             Clicked="plus_symbol_clicked"
                             Grid.Column="1"></ImageButton>
            </Grid>
            <Grid ColumnDefinitions="1*,4*,1*"
                  RowDefinitions="80"
                  Margin="0,30">
                <Button
                    Text="Finish"
                    Clicked="Button_Clicked"
                    FontSize="30"
                    FontAttributes="Bold"
                    Grid.Column="1"></Button>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Budget_Buddy.DebtPayoffReport"
             Loaded="ContentPage_Loaded"
             xmlns:Model="clr-namespace:Budget_Buddy.Models">
    <VerticalStackLayout>
        <Label 
            x:Name="header_label"
            FontSize="35"
            FontAttributes="Bold"
            Text=""
            HorizontalOptions="Center"
            Margin="20,0"/>
        <Label x:Name="timestamp_label" FontSize="12" Margin="20,20,20,0"  VerticalTextAlignment="Center" HorizontalTextAlignment="End"/>
        <Grid ColumnDefinitions="1*, 1*,1*" RowDefinitions="100" Margin="10,20,10,0" ColumnSpacing="3">
            <Label Text="Name" FontAttributes="Bold" FontSize="25" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center"></Label>
            <Label Text="Principal Balance" FontAttributes="Bold" FontSize="25" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center"></Label>
            <Label Text="Payoff Time (Months)" FontAttributes="Bold" FontSize="25" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center"></Label>
        </Grid>
        <CollectionView x:DataType="Model:DebtPayoff" x:Name="payoff_collectionview">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="1*, 1*,1*" RowDefinitions="80" Margin="10,0" >
                        <Label Text="{Binding Name}" FontSize="30" Grid.Column="0" HorizontalTextAlignment="Start" VerticalOptions="Center"></Label>
                        <Label Text="{Binding PrincipalBalance, StringFormat=${0}}" FontSize="30" Grid.Column="1" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalOptions="Center"></Label>
                        <Label Text="{Binding PayoffTime}" FontSize="30" Grid.Column="2" HorizontalOptions="Center" HorizontalTextAlignment="Center" VerticalOptions="Center"></Label>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>